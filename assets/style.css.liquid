*::selection {
  color: white;
  background-color: #4e4e4e;
}

* {
  box-sizing: border-box;
}

html,
body {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: 400;
  color: #bfbdbd;
  line-height: 1.3;
  letter-spacing: 0px;
}

body {
  display: flex;
  justify-content: center;
}

a,
input,
input::placeholder {
  text-decoration: none;
  color: #bcb6af;
}

input:focus {
  outline: none;
}

input[name="updates[]"],
input[name="add"] {
  border: 1px solid #bfbdbd;
  color: #bfbdbd;
}

button,
input[type="submit"]:not(.search-submit) {
  border: none;
  color: white;
  cursor: pointer;
  background-color: #bfbdbd;
  padding: 0.25em 0.75em 0.35em;
  letter-spacing: 0.75px;
}

button:hover {
  background: #4e4e4e;
}

.container {
  display: grid;
  grid-template:
    "header"
    "main"
    "footer";
  justify-content: center;
  grid-template-columns: 1000px;
  grid-template-rows: 130px auto 50px;
}

ul {
  list-style: none;
  padding: 0;
}

main {
  position: relative;
  width: 100%;
  grid-area: main;
  display: flex;
  flex-direction: column;
}

.news {
  position: relative;
  display: grid;
  grid-template: "left right";
  gap: 20px;
  border-bottom: solid #bfbdbd 1px;
  padding-bottom: 2em;
  margin-bottom: 2em;
}

.news .left {
  grid-area: left;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.news .left .top {
  font-size: 1.3rem;
  font-weight: 600;
  margin: 0;
}

.news .right {
  grid-area: right;
}

.news .right img {
  width: 100%;
  justify-self: end;
}

.items-ul {
  position: relative;
  display: grid;
  grid-gap: 0 2.5em;
  width: 100%;
  grid-template-columns: repeat(4, minmax(0, 1fr));
}

.items-ul > li > a {
  position: relative;
  display: grid;
  grid-template-rows: calc(100% - 30px) 30px;
  grid-auto-rows: 1fr;
  text-align: center;
  text-decoration: none;
  color: rgb(200, 200, 200);
}

.image-title-container img {
  width: 100%; /* Ensure image takes full width of container */
  max-width: 100%;
  height: auto; /* Maintain aspect ratio */
}

.image-title-container .title {
  font-size: 1.2rem;
  font-weight: 400;
}

.back-pagination-container {
  display: flex;
  justify-content: space-between;
  font-size: 1.2rem;
  font-weight: 400;
  margin-bottom: 2rem;
}

.back-pagination-container .next a {
  display: none;
}

.back-pagination-container .back-button {
  font-size: 1.2rem;
  font-weight: 400;
}

@media (max-width: 1200px) {
  .items-ul {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (max-width: 800px) {
  .items-ul {
    grid-template-columns: repeat(2, 1fr);
  }
}
