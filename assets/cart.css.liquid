.cart-container {
  display: grid;
  grid-template-columns: 70% 30%;
  padding-top: 1em;
  margin-bottom: 2rem;
}

.cart-container .right {
  padding-left: 2rem;
  border-left: 1px solid #bfbdbd;
}

.cart-container .left button[name="update"] {
  width: fit-content;
}

.remove {
  text-decoration: none;
  color: #bcb6af;
}

.checkout-button {
  width: 8em;
  font-size: 0.9rem;
  font-weight: 500;
}

.cart-container .left {
  margin-right: 2em;
}

.cart-container ul {
  margin: 0;
}

.cart-container .left ul li {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #bfbdbd;
  padding-bottom: 1em;
  margin-bottom: 1em;
}

.cart-container .left ul li:last-child {
  border: none;
}

.cart-container .left ul li input[name="updates[]"] {
  width: 2.5em;
  text-align: center;
}

.cart-container .right {
  display: flex;
  flex-direction: column;
}

.quantity-price {
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 16px;
  font-size: 1.2rem;
  font-weight: 400;
}

.cart-container .left ul li .li-right {
  display: flex;
  flex-direction: column;
  align-items: end;
  text-align: right;
  min-width: 50%;
  font-size: 16px;
  gap: 1em;
}

input[name="updates[]"] {
  font-size: 1rem;
  font-weight: 400;
}

.cart-container .left ul li .li-right h2 {
  margin-bottom: 0;
}

.subtotal-price {
  font-size: 2rem;
}

.right .note {
  font-size: 0.8rem;
  font-weight: 400;
  margin-bottom: 3em;
}
