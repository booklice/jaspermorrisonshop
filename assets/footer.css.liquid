footer {
  grid-area: footer;
  border-top: 1px solid grey;
  font-size: 0.9rem;
  font-weight: 500;
}

footer p {
  margin: 0;
}

.footer-container {
  display: flex;
  justify-content: space-between;
  padding-top: 1em;
  margin-bottom: 2.5em;
}

.left {
  display: flex;
  flex-direction: column;
  width: 300px;
  gap: 4px;
}

.footer-container .left p {
  display: flex;
  justify-content: space-between;
}

.footer-container .right {
  display: flex;
  flex-direction: column;
  justify-self: end;
  text-align: right;
  gap: 4px;
}

.footer-container .left p:first-child,
.footer-container .right p:first-child {
  margin-bottom: 7px;
}

.footer-container .right ul {
  display: flex;
  gap: 1rem;
  margin: 0;
}

.footer-container .right li::after {
  content: "|";
  margin: 0 0 0 0.5rem;
}
