header {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.logo {
  width: 190px;
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
  cursor: pointer;
}

header .right {
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
  gap: 0.75em;
}

.cart,
.search {
  width: 40px;
  height: 40px;
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
}

.cart {
  display: flex;
  justify-content: center;
  align-items: center;
}

.count {
  color: white;
  font-size: 1.3rem;
  font-weight: 600;
}
